@using eShop.Services.Data.Interfaces
@using eShop.Web.Infrastructure.Extensions
@model ProductDetailsViewModel

@inject IProductService HouseService

@{
    ViewBag.Title = "Product Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImagePath" alt="@Model.Name">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Name</u></p>
            <p>Description: <b>@Model.Description</b></p>
            <p>Warranty: @Model.Warranty Months</p>
            <p>
                Price:
                <b>@($"{Model.Price:f2}") EUR</b>
            </p>
            <
            <p>Category: <b>@Model.Category</b></p>

            <div class="form-inline">
                <a class="btn btn-warning" asp-controller="House" asp-action="Edit"
                   asp-route-id="@Model.Id">Edit</a>
                <a class="ml-2 btn btn-danger" asp-controller="House" asp-action="Delete"
                   asp-route-id="@Model.Id">Delete</a>
            </div>

        </div>
    </div>
</div>
